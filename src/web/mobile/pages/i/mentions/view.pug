extends ../../../ui
include ../../../common/views/post/smart/post.pug

block title
	| あなた宛て

block header
	i.fa.fa-at
	| あなた宛て

block action
	if mentions.length > 0
		button.delete.action: i.fa.fa-trash

block content
	main(role='main')
		div#stream
			div.posts
				if mentions.length > 0
					each post in mentions
						+post(post)
				else
					p.empty
						i.fa.fa-info-circle
						| あなた宛ての投稿の通知はありません。
			if mentions.length > 0
				button.read-more
					i.fa.fa-sort-amount-desc
					p もっと読み込む
