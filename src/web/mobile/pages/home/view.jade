extends ../../ui
include ../../common/views/post/smart/post

block title
	=locale.sites.mobile.pages._home.page_title

block assets
	script(src= config.streamingUrl + '/socket.io/socket.io.js')

block header
	i.fa.fa-home
	=locale.sites.mobile.pages._home.page_header_title

block action
	button.post.action: i.fa.fa-pencil-square-o

block content
	main(role='main')
		div#timeline
			div.posts
				if timeline.length > 0
					each post in timeline
						+post(post)
				else
					p.empty
						| タイムラインに表示するコンテンツがありません。
						br
						| フォローしている人の投稿と、自分の投稿がここに表示されます。
			if timeline.length > 0
				button.read-more
					i.fa.fa-sort-amount-desc
					span.text=locale.sites.mobile.pages._home.read_more
append body
	if me.screenName == 'syuilo'
		footer#misskey-footer
			div#ad.
				<!-- i-mobile for SmartPhone client script -->
				<script type="text/javascript">
					imobile_tag_ver = "0.3"; 
					imobile_pid = "35353"; 
					imobile_asid = "777677"; 
					imobile_type = "inline";
				</script>
				<script type="text/javascript" src="https://spad.i-mobile.co.jp/script/adssp.js?20110215"></script>
