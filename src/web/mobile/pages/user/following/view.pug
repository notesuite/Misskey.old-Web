extends ../base
include ../../../common/widgets/users-list/users.pug

block title
	= user.name + 'さんがフォローしているユーザー'

block header
	b= user.name
	| のフォロー

block user-content
	div#following
		if following.length == 0
			p.empty
				| 誰もフォローしていないようです。
		else
			+users(following)
			
			button.read-more
				i.fa.fa-sort-amount-desc
				p もっと読み込む
