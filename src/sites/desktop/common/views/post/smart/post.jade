include ../content
include ../repost-form
include ./sub-post

mixin post(post)
	if post.type == 'repost'
		+core(post.post, true, post)
	else
		+core(post, false)

mixin core(post, isRepost, repost)
	- var login = (me != null);
	- var isHaveReplies = (post.repliesCount > 0);
	- var isTalk = (post.inReplyToPost !== null && post.inReplyToPost.inReplyToPost !== null);
	- var userTitle = post.user.comment != null ? post.user.comment : '@' + post.user.screenName;
	article.post(
			class                   = isRepost ? 'repost ' + post.type : post.type
			tabindex                = '-1'
			lang                    = post.user.lang
			title                   = post.createdAt
			itemscope
			itemtype                = 'http://schema.org/BlogPosting'
			data-id                 = post.id
			data-cursor             = isRepost ? repost.cursor : post.cursor
			data-type               = post.type
			data-is-liked          != login ? post.isLiked.toString() : null
			data-is-reposted       != login ? post.isReposted.toString() : null
			data-is-have-replies   != isHaveReplies.toString()
			data-is-talk           != isTalk.toString())
		if isTalk
			i.fa.fa-ellipsis-v.talk-ellipsis
		if isHaveReplies
			i.fa.fa-ellipsis-v.replies-ellipsis
		if login && me.id != post.userId
			+repost-form(post)
		div.talk
		if post.inReplyToPost
			+subPost(post.inReplyToPost)(class='reply-source')
		if isRepost
			p.repost-info
				a.avatar-anchor(href='/' + repost.user.screenName, title= userTitle)
					img.avatar(src=repost.user.avatarUrl + '?mini', alt='avatar')
				i.fa.fa-retweet
				| Reposted by 
				a.name(href='/' + repost.user.screenName)= repost.user.name
		div.main
			div.avatar-area
				a.avatar-anchor(href='/' + post.user.screenName, title= userTitle, rel='avatar')
					img.avatar(src=post.user.avatarUrl + '?mini', alt='avatar')
			header
				div.author(itemprop='author')
					a.name(href='/' + post.user.screenName, rel='author')= post.user.name
					if post.user.isVerified
						img.verified-icon(src='/resources/common/verified.png', alt='verified', title='認証済み')
					span.screen-name= post.user.screenName
				div.right
					if post.app != null
						a.via-anchor
							p.via
								span.caption via
								b.app-name= post.app.name
					a.time-anchor(href='/' + post.user.screenName + '/' + post.id, itemprop='url')
						time(datetime=post.createdAt, itemprop='dateCreated', pubdate, data-display-type='relative')= post.createdAt
			div.content(itemprop='articleBody')
				+content(post)
		footer
			if login
				ul.actions
					li.reply
						button(title='返信')
							i.fa.fa-reply
						a.count(href='/' + post.user.screenName + '/' + post.id)
							= post.repliesCount != 0 ? post.repliesCount : ''
					li.repost
						button(title= post.isReposted ? 'シェアを取り消し' : 'シェア')
							i.fa.fa-retweet
						a.count(href='/' + post.user.screenName + '/' + post.id + '/reposts')
							= post.repostsCount != 0 ? post.repostsCount : ''
					li.like
						button(title= post.isLiked ? 'Unlike' : 'Like')
							i.fa.fa-star
						a.count(href='/' + post.user.screenName + '/' + post.id + '/likes')
							= post.likesCount != 0 ? post.likesCount : ''
		form.reply-form
			img.me-avatar(src=me.avatarUrl + '?mini', alt='avatar')
			div.form
				textarea(name='text', placeholder='この投稿に返信...', aria-multiline='true')= '@' + post.user.screenName + ' '
				div.design-allow(role='presentation')
				ol.photos
				ol.uploads
				button.submit-button.ui-button(type='submit')
					| Reply
					i.fa.fa-reply
				button.attach-from-local(type='button', title='PCから画像を添付する')
					i.fa.fa-upload
				button.attach-from-album(type='button', title='アルバムから画像を添付する')
					i.fa.fa-folder-open
				input(name='file', type='file', accept='image/*', multiple)
		div.replies(itemprop='comment')
